<Page x:Class="DictionaryManagement.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DictionaryManagement.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Width="286" Height="106">

    <Grid Background="White">
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CTEmail" HorizontalAlignment="Left" Height="23" Margin="75,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="CTPassword" HorizontalAlignment="Left" Height="23" Margin="75,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="CBLogin" Content="Login" HorizontalAlignment="Left" Margin="200,73,0,0" VerticalAlignment="Top" Width="75" Click="CBLogin_Click"/>

    </Grid>
</Page>
