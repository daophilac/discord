<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AMOLED_dark_theme" parent="Theme.AppCompat.NoActionBar">
        <!--Dark AMOLED-->
        <item name="android:background">@android:color/black</item>
        <item name="android:textViewStyle">@style/AMOLED_dark_theme.TextView</item>
        <item name="buttonStyle">@style/AMOLED_dark_theme.Button</item>
        <item name="editTextStyle">@style/AMOLED_dark_theme.EditText</item>
        <item name="serverRecyclerViewStyle">@style/AMOLED_dark_theme.ServerRecyclerView</item>
        <item name="channelRecyclerViewStyle">@style/AMOLED_dark_theme.ChannelRecyclerView</item>
        <item name="messageRecyclerViewStyle">@style/AMOLED_dark_theme.MessageRecyclerView</item>
        <item name="navigationButtonStyle">@style/AMOLED_dark_theme.NavigationButton</item>
        <item name="sendMessageButtonStyle">@style/AMOLED_dark_theme.SendMessageButton</item>
        <item name="addServerButtonStyle">@style/AMOLED_dark_theme.AddServerButton</item>
        <item name="backButtonStyle">@style/AMOLED_dark_theme.BackButton</item>
        <item name="moreButtonStyle">@style/AMOLED_dark_theme.MoreButton</item>
    </style>
    <style name="Light" parent="Theme.AppCompat.NoActionBar">
        <!--Light-->
        <item name="android:background">@android:color/white</item>
        <item name="android:textViewStyle">@style/Light.TextView</item>
        <item name="buttonStyle">@style/Light.Button</item>
        <item name="editTextStyle">@style/Light.EditText</item>
        <item name="serverRecyclerViewStyle">@style/Light.ServerRecyclerView</item>
        <item name="channelRecyclerViewStyle">@style/Light.ChannelRecyclerView</item>
        <item name="messageRecyclerViewStyle">@style/Light.MessageRecyclerView</item>
        <item name="navigationButtonStyle">@style/Light.NavigationButton</item>
        <item name="sendMessageButtonStyle">@style/Light.SendMessageButton</item>
        <item name="addServerButtonStyle">@style/Light.AddServerButton</item>
        <item name="backButtonStyle">@style/Light.BackButton</item>
        <item name="moreButtonStyle">@style/Light.MoreButton</item>
    </style>




    <style name="AMOLED_dark_theme.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AMOLED_dark_theme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AMOLED_dark_theme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AMOLED_dark_theme.ServerRecyclerView">
        <item name="android:background">@color/darker</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AMOLED_dark_theme.ChannelRecyclerView">
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AMOLED_dark_theme.MessageRecyclerView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AMOLED_dark_theme.NavigationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_menu_white_24dp</item>
    </style>
    <style name="AMOLED_dark_theme.SendMessageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_send_white_32dp</item>
    </style>
    <style name="AMOLED_dark_theme.AddServerButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_add_circle_white_72dp</item>
    </style>
    <style name="AMOLED_dark_theme.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_arrow_back_white_32dp</item>
    </style>
    <style name="AMOLED_dark_theme.MoreButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>


    <style name="Light.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.ServerRecyclerView">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.ChannelRecyclerView">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.MessageRecyclerView">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.NavigationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_menu_black_24dp</item>
    </style>
    <style name="Light.SendMessageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_send_black_32dp</item>
    </style>
    <style name="Light.AddServerButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_add_circle_black_72dp</item>
    </style>
    <style name="Light.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_arrow_back_black_32dp</item>
    </style>
    <style name="Light.MoreButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
</resources>