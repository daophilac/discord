<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="FullWidthDialog" parent="android:Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DarkAMOLED" parent="Theme.AppCompat.NoActionBar">
        <!--Dark AMOLED-->
        <item name="android:background">@android:color/black</item>
        <item name="android:textViewStyle">@style/DarkAMOLED.TextView</item>
        <item name="buttonStyle">@style/DarkAMOLED.Button</item>
        <item name="editTextStyle">@style/DarkAMOLED.EditText</item>
        <item name="radioButtonStyle">@style/DarkAMOLED.RadioButton</item>
        <item name="serverRecyclerViewStyle">@style/DarkAMOLED.ServerRecyclerView</item>
        <item name="channelRecyclerViewStyle">@style/DarkAMOLED.ChannelRecyclerView</item>
        <item name="messageRecyclerViewStyle">@style/DarkAMOLED.MessageRecyclerView</item>
        <item name="navigationButtonStyle">@style/DarkAMOLED.NavigationButton</item>
        <item name="sendMessageButtonStyle">@style/DarkAMOLED.SendMessageButton</item>
        <item name="addServerButtonStyle">@style/DarkAMOLED.AddServerButton</item>
        <item name="backButtonStyle">@style/DarkAMOLED.BackButton</item>
        <item name="moreButtonStyle">@style/DarkAMOLED.MoreButton</item>
        <item name="userSettingButtonStyle">@style/DarkAMOLED.UserSettingButton</item>
        <item name="copyImageStyle">@style/DarkAMOLED.CopyImage</item>
        <item name="editImageStyle">@style/DarkAMOLED.EditImage</item>
        <item name="deleteImageStyle">@style/DarkAMOLED.DeleteImage</item>
    </style>
    <style name="Light" parent="Theme.AppCompat.NoActionBar">
        <!--Light-->
        <item name="android:background">@android:color/white</item>
        <item name="android:textViewStyle">@style/Light.TextView</item>
        <item name="buttonStyle">@style/Light.Button</item>
        <item name="editTextStyle">@style/Light.EditText</item>
        <item name="radioButtonStyle">@style/Light.RadioButton</item>
        <item name="serverRecyclerViewStyle">@style/Light.ServerRecyclerView</item>
        <item name="channelRecyclerViewStyle">@style/Light.ChannelRecyclerView</item>
        <item name="messageRecyclerViewStyle">@style/Light.MessageRecyclerView</item>
        <item name="navigationButtonStyle">@style/Light.NavigationButton</item>
        <item name="sendMessageButtonStyle">@style/Light.SendMessageButton</item>
        <item name="addServerButtonStyle">@style/Light.AddServerButton</item>
        <item name="backButtonStyle">@style/Light.BackButton</item>
        <item name="moreButtonStyle">@style/Light.MoreButton</item>
        <item name="userSettingButtonStyle">@style/Light.UserSettingButton</item>
        <item name="copyImageStyle">@style/Light.CopyImage</item>
        <item name="editImageStyle">@style/Light.EditImage</item>
        <item name="deleteImageStyle">@style/Light.DeleteImage</item>
    </style>



    <style name="DarkAMOLED.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="DarkAMOLED.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.ServerRecyclerView">
        <item name="android:background">@color/darker</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.ChannelRecyclerView">
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.MessageRecyclerView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkAMOLED.NavigationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_menu_white_24dp</item>
    </style>
    <style name="DarkAMOLED.SendMessageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_send_white_32dp</item>
    </style>
    <style name="DarkAMOLED.AddServerButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_add_circle_white_72dp</item>
    </style>
    <style name="DarkAMOLED.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_arrow_back_white_32dp</item>
    </style>
    <style name="DarkAMOLED.MoreButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>
    <style name="DarkAMOLED.UserSettingButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/ic_settings_white_24dp</item>
    </style>
    <style name="DarkAMOLED.CopyImage" >
        <item name="android:src">@drawable/ic_content_copy_white_24dp</item>
    </style>
    <style name="DarkAMOLED.EditImage" >
        <item name="android:src">@drawable/ic_edit_white_24dp</item>
    </style>
    <style name="DarkAMOLED.DeleteImage" >
        <item name="android:src">@drawable/ic_delete_white_24dp</item>
    </style>


    <style name="Light.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Light.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/black</item>
