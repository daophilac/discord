<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyCustomView">
        <attr name="square_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="FlexibleButton">
        <attr name="centerParent" format="boolean"/>
        <attr name="type" format="enum">
            <enum name="simple_button" value="0"/>
            <enum name="image_button" value="1"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="src" format="string"/>
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="diameter" format="integer"/>
        <attr name="shape_color" format="color"/>
        <attr name="text_size" format="integer"/>
        <attr name="text_color" format="color"/>
        <attr name="text_padding" format="integer"/>
        <attr name="text_paddingLeft" format="integer"/>
        <attr name="text_paddingTop" format="integer"/>
        <attr name="text_paddingRight" format="integer"/>
        <attr name="text_paddingBottom" format="integer"/>
        <attr name="text_horizontalAlign" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="text_verticalAlign" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="color_fillStyle" format="enum">
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
            <enum name="fill_and_stroke" value="2"/>
        </attr>
        <attr name="drawable" format="string"/>
        <attr name="drawable_scaleMode" format="enum">
            <enum name="origin" value="0"/>
            <enum name="crop_fit" value="1"/>
            <enum name="scaleXY_fit" value="2"/>
            <enum name="scale_aspect_ratio" value="3"/>
        </attr>
    </declare-styleable>
</resources>