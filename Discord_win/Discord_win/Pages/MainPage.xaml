<Page x:Class="Discord_win.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord_win.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid>
        
        <Canvas x:Name="CanvasServer" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="80" Background="{DynamicResource CanvasServer_Background}"/>
        <Canvas x:Name="CanvasChannel" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="240" Margin="80,0,0,0" Background="{DynamicResource CanvasChannel_Background}"/>
        <Canvas x:Name="CanvasRole" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="240" Background="{DynamicResource CanvasRole_Background}"/>
        <Canvas x:Name="CanvasChat" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="720" Margin="320,0,0,0" Background="{DynamicResource CanvasChat_Background}">
            <Canvas x:Name="CanvasMessage" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="640" Height="40" Canvas.Left="40" Canvas.Bottom="20">
                <TextBox x:Name="TextBoxMessage" Height="40" TextWrapping="Wrap" Text="TextBox" Width="640" VerticalContentAlignment="Center" Background="{DynamicResource TextBoxMessage_Background}" Foreground="{DynamicResource TextBoxMessage_Foreground}" FontSize="14"/>

            </Canvas>

        </Canvas>

    </Grid>
</Page>
