<Page x:Class="Discord_win.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord_win.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid>
        <DockPanel>
            <DockPanel x:Name="DockPanelServer" LastChildFill="False" Width="80" VerticalAlignment="Stretch" Background="{DynamicResource ServerSection_Background}">

            </DockPanel>
            <!--<Canvas x:Name="CanvasServer"  DockPanel.Dock="Left" Width="80" Background="{DynamicResource ServerSection_Background}">
                <Button Content="Button" Width="75" Click="Button_Click" HorizontalAlignment="Center"/>
            </Canvas>-->
            <DockPanel x:Name="DockPanelChannel" LastChildFill="False" Width="240" Background="{DynamicResource ChannelSection_Background}">
                
            </DockPanel>
            <!--<Canvas x:Name="CanvasChannel" DockPanel.Dock="Left" Width="240" Background="{DynamicResource ChannelSection_Background}"/>-->
            <Canvas x:Name="CanvasRole" DockPanel.Dock="Right" Width="240" Background="{DynamicResource RoleSection_Background}"/>
            <DockPanel Height="40" DockPanel.Dock="Bottom">
                <Canvas Width="40" DockPanel.Dock="Left" Background="{DynamicResource MessageSection_Background}"/>
                <Canvas Width="40" DockPanel.Dock="Right" Background="{DynamicResource MessageSection_Background}"/>
                <Button x:Name="ButtonSend" Content="Send" DockPanel.Dock="Right" Click="ButtonSend_Click"></Button>
                <TextBox x:Name="TextBoxType" Height="40" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center"  FontSize="14" Background="{DynamicResource TextBoxChat_Background}" Foreground="{DynamicResource TextBoxChat_Foreground}"/>
                
            </DockPanel>
            <DockPanel x:Name="DockPanelMessage" LastChildFill="False" Background="{DynamicResource MessageSection_Background}">
                <!--<Frame 
                    Content="" 
                    Name="MessageFrame"
                    NavigationUIVisibility="Hidden"/>-->
            </DockPanel>
            <!--<Canvas x:Name="CanvasMessage" Background="{DynamicResource MessageSection_Background}">
                <Frame 
                    Content="" 
                    Name="ChatFrame"
                    NavigationUIVisibility="Hidden"/>
            </Canvas>-->
        </DockPanel>
    </Grid>
</Page>
