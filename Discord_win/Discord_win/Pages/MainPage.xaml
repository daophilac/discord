<Page x:Class="Discord_win.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord_win.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid>
        <DockPanel x:Name="DockPanelMain">
            <DockPanel x:Name="DockPanelServer" Width="80" VerticalAlignment="Stretch" x:FieldModifier="private" Background="{DynamicResource ServerSection_Background}">
                <Grid DockPanel.Dock="Bottom">
                    <Button x:Name="ButtonCreateOrJoinServer" Content="Join" Width="50" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid x:Name="GridServerButton">
                </Grid>
                <!--<Image Height="28" Width="28" Source="avatar.png"></Image>-->
            </DockPanel>
            <DockPanel x:Name="DockPanelChannel" x:FieldModifier="private" Width="240" Background="{DynamicResource ChannelSection_Background}">
                <Grid DockPanel.Dock="Bottom">
                    <Button x:Name="ButtonUserSetting" Content="Setting" HorizontalAlignment="Right" />
                </Grid>
                <Grid x:Name="GridChannelButton">

                </Grid>
            </DockPanel>
            <Grid x:Name="GridRole" DockPanel.Dock="Right" Width="240" Background="{DynamicResource RoleSection_Background}"/>
            <DockPanel DockPanel.Dock="Bottom" Height="40" Background="{DynamicResource MessageSection_Background}">
                <Grid Margin="40, 0, 40, 0">
                    <TextBox x:Name="TextBoxType" Height="40" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" FontSize="14" Background="{DynamicResource TextBoxChat_Background}" Foreground="{DynamicResource TextBoxChat_Foreground}"/>
                    <Button x:Name="ButtonSend" Content="Send" HorizontalAlignment="Right" />
                </Grid>
            </DockPanel>
            <DockPanel x:Name="DockPanelMessage" LastChildFill="False" Background="{DynamicResource MessageSection_Background}">
                <Grid x:Name="GridMessage" x:FieldModifier="private"></Grid>
            </DockPanel>
        </DockPanel>

    </Grid>
</Page>
