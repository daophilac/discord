        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord_win.Dialog"
        mc:Ignorable="d"
        Title="Create or join a server" Height="113.432" Width="220.26" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonCreateServer" Content="Create a server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="104" Click="ButtonCreateServer_Click"/>
        <Button x:Name="buttonJoinServer" Content="Join a server" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="104" Click="ButtonJoinServer_Click"/>

    </Grid>
</Window>
