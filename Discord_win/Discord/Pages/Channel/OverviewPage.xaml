<Page x:Class="Discord.Pages.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="512" d:DesignWidth="555"
      Title="OverviewPage" Loaded="Page_Loaded">

    <Grid Background="{DynamicResource Light3_Background}">
        <Label Content="OVERVIEW" FontWeight="Bold" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20"/>
        <Label Content="CHANNEL NAME" Margin="10,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxChannelName" x:FieldModifier="private" HorizontalAlignment="Left" Height="23" Margin="10,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512"/>
        <Button x:Name="ButtonSave" x:FieldModifier="private" Content="Save" Height="30" Width="50" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontWeight="Bold" Foreground="White" Background="#FF43B581" Click="ButtonSave_Click"/>
    </Grid>
</Page>
